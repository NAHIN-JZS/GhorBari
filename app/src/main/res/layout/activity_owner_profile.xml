<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ownerProfile">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Welcome Sir\nChoose your option"
    android:layout_margin="10dp"/>
    <Button
        android:id="@+id/newhouse"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Add a new house to rent"
        android:onClick="onclickowner"
        android:padding="10dp"
        />
    <Button
        android:id="@+id/showallhouse"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Show all house"
        android:onClick="onclickowner"
        android:padding="10dp"
        />




</LinearLayout>